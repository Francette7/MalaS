<%= form_with(model: recrutement, local: true) do |form| %>

    <%= form_tag url_for(action: 'create'), method: "recrutement" do %>
    <input type="hidden" name="authenticity_token" value=<%= form_authenticity_token %> >

  <div class="field">
    <%= label_tag :content %>
    <%= text_area_tag :content, @recrutement.content  %>
  </div>
  <div class="field">
    <input type="hidden" name="club_id" value="<%=@club.id%>">
  </div>

  <div class="field">
    <%= label_tag :deadline %>
    <%= text_area_tag :deadline, @recrutement.deadline %>
  </div>

  <div class="actions">
    <%= submit_tag "creer recrutement" %>
  </div>
<% end %>
<% end %>